{
  "name": "xplorajs",
  "version": "0.3.5",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/XplorationTechnologies/xplora.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "dist/index.d.ts",
  "bin": {
    "xplorajs": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "bun run build --watch",
    "build": "swc src -d dist --config-file .swcrc && tsc --emitDeclarationOnly",
    "postbuild": "bun run ./scripts/fix-shebang.js",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.3",
    "ws": "^8.18.2",
    "xplorajs-react": "workspace:^0.3.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.11.24",
    "@types/bun": "^1.2.13",
    "@types/ws": "^8.18.1",
    "react-refresh": "^0.17.0"
  },
  "peerDependencies": {
    "react": ">=18 || >=19",
    "react-dom": ">=18 || >=19",
    "tailwindcss": ">=4.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
