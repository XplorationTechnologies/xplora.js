{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useConst": "warn",
        "noVar": "error",
        "noParameterAssign": "error"
      },
      "suspicious": {
        "noShadowRestrictedNames": "error"
      }
    }
  },
  "organizeImports": { "enabled": true },
  "javascript": {
    "formatter": { "quoteStyle": "double", "semicolons": "asNeeded" }
  },
  "vcs": { "enabled": true, "clientKind": "git" },
  "files": {
    "ignore": ["node_modules", "dist", "build", "coverage", "*.log", "bun.lockb"]
  }
}
